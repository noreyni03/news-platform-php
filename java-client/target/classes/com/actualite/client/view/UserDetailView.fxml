<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.actualite.client.controller.UserDetailController" hgap="10" vgap="10" alignment="CENTER" prefWidth="400" prefHeight="400">
    <columnConstraints>
        <ColumnConstraints minWidth="100" />
        <ColumnConstraints minWidth="200" />
    </columnConstraints>
    <children>
        <Label text="Nom d'utilisateur:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Mot de passe (laisser vide pour ne pas changer):" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Rôle:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <ChoiceBox fx:id="roleChoice" GridPane.rowIndex="3" GridPane.columnIndex="1" />

        <Label text="Créé le:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <Label fx:id="createdAtLabel" GridPane.rowIndex="4" GridPane.columnIndex="1" />

        <HBox spacing="10" GridPane.rowIndex="5" GridPane.columnIndex="1" alignment="CENTER_RIGHT">
            <children>
                <Button text="Enregistrer" onAction="#onSave" />
                <Button text="Supprimer" onAction="#onDelete" />
                <Button text="Annuler" onAction="#onCancel" />
            </children>
        </HBox>
    </children>
</GridPane> 