<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.actualite.client.controller.LoginController" prefWidth="400" prefHeight="250">
    <children>
        <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <children>
                <Label text="Authentification" style="-fx-font-size:18px;font-weight:bold;" />
                <TextField fx:id="usernameField" promptText="Nom d'utilisateur" />
                <PasswordField fx:id="passwordField" promptText="Mot de passe" />
                <Button text="Se connecter" onAction="#onLogin" maxWidth="Infinity" />
            </children>
        </VBox>
    </children>
</AnchorPane>
