<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.actualite.client.controller.LoginController" hgap="10" vgap="10" alignment="CENTER">
    <Label text="Nom d'utilisateur:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
    <Label text="Mot de passe:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    <Button text="Connexion" onAction="#handleLogin" GridPane.rowIndex="2" GridPane.columnIndex="1" />
</GridPane> 